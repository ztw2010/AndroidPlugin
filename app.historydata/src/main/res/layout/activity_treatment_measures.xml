<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maintenance_registration_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/titleBarView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="top"
        layout="@layout/common_title"
        android:background="@color/black" />

    <FrameLayout
        android:id="@+id/content_contaier"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_marginTop="58dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_content"
            style="@style/black_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="5dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/img_big_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <Button
            android:id="@+id/hide_big_img_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/sys_category_bg_color" />

        <ImageView
            android:id="@+id/big_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center" />
    </FrameLayout>

</FrameLayout>