<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>

            <!-- 描边 -->
            <stroke android:width="0dp" android:color="@color/transparent" />
            <!-- 圆角 -->
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="4dp" android:topLeftRadius="0dp" android:topRightRadius="0dp"/>
            <solid android:color="@color/white_8alpha" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>

            <!-- 描边 -->
            <stroke android:width="0dp" android:color="@color/transparent" />
            <!-- 圆角 -->
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="4dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />

            <solid android:color="@color/transparent" />
        </shape>
    </item>

</selector>