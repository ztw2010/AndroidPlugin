<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="41dp"
    android:background="@drawable/bt_nobgd"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="18dp"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/txt_name"
            style="@style/black_normal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxEms="12"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/right_arrow_img"
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/generalpage_2x"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/right_checkbox_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/failuredidnotchooseassemblies_2x"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/title_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="@color/black_line" />

</LinearLayout>